{{!-- <div class = "columns is half"> --}}
<div class="columns">
  <div class="column">
    <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
            
              <img src="/images/{{image}}" alt="{{name}}">
            
            </figure>
          </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="title is-4">{{name}}</p>
                  <p class="subtitle is-6">{{description}}</p>
                  <p class="subtitle is-6">Created by {{user.name}}</p>
                </div>
              </div>
            </div>
        </div>
  </div>
  <div class="column">
    
    <div>
      <form class="cake-comment-form">
        <div>
        <label for="user-name">Name:</label>
        <input class="input" id="comment-name" type="text" placeholder="name">
      </div>
      <div>
        <label for="cake-comment">Comment:</label>
        <textarea class="textarea" id="cake-comment" placeholder="comment"></textarea>
      </div>
      <div>
        <button type="submit" class="button is-link">Submit</button>
      </div>
      </form>
    </div>
  </div>

  {{#if comments.length}}
    <div>
      <h3>Comments:</h3>

      {{#each comments as |comment|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4>{{comment.comment}}</h4>
        </div>
        <div>
          <p>comment by {{comment.name}}</p>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
    </div>

</div>

<script src="./js/cake_comment.js"></script>
